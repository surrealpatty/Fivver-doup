{
  "name": "fivver_doup",
  "version": "1.0.0",
  "description": "A Fiverr-like platform for skill-based posts.",
  "author": "Patty",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs",
    "test": "src/test"
  },
  "scripts": {
    "format": "prettier --write .",
    "clean-build": "rimraf dist && tsc",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "swc src --out-dir dist --config-file .swcrc && cmd /c move dist\\src\\index.js dist\\index.js && npx tsc",
    "build:watch": "swc src -d dist --watch",
    "pretest": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:ci": "jest --ci --maxWorkers=4",
    "lint": "eslint \"src/**/*.{ts,js,vue}\" --fix",
    "lint:check": "eslint \"src/**/*.{ts,js,vue}\"",
    "migrate": "npx sequelize-cli db:migrate",
    "seed": "npx sequelize-cli db:seed:all",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "clean": "rimraf dist/ build/"
  },
  "keywords": [
    "fiverr-clone",
    "skills",
    "platform"
  ],
  "license": "ISC",
  "dependencies": {
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "core-js": "^3.39.0",
    "cors": "^2.8.5",
    "express-validator": "^7.2.0",
    "json5": "^2.2.3",
    "jsonwebtoken": "^9.0.2",
    "jwt-simple": "^0.5.6",
    "lodash": "^4.17.21",
    "lodash.merge": "^4.6.2",
    "marked": "^15.0.3",
    "micromatch": "^4.0.8",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.11.5",
    "nodemailer": "^6.9.16",
    "react": "^18.3.1",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.5",
    "sequelize-typescript": "^2.1.6",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.3",
    "vue-router": "^4.5.0",
    "winston": "^3.17.0",
    "yargs": "^17.7.2",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.9.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.1",
    "@types/nodemailer": "^6.4.17",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/vue": "^1.0.31",
    "@typescript-eslint/parser": "^8.16.0",
    "@vue/compiler-sfc": "^3.5.13",
    "@vue/runtime-core": "^3.5.13",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "cypress": "^13.16.0",
    "dotenv": "^16.4.7",
    "esbuild": "^0.24.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.31.0",
    "execa": "^9.5.1",
    "express": "^4.21.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock-express": "^0.1.1",
    "lint-staged": "^13.0.0",
    "mimic-fn": "^4.0.0",
    "nodemon": "^3.1.7",
    "onetime": "^7.0.0",
    "p-limit": "^6.1.0",
    "p-try": "^3.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "sequelize-cli": "^6.6.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "vue": "^3.5.13",
    "vue-eslint-parser": "^9.4.3",
    "vue-tsc": "^2.1.10"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-typescript/base",
      "plugin:import/typescript",
      "plugin:vue/vue3-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "vue"
    ],
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.ts",
            "**/jest.config.ts"
          ]
        }
      ],
      "vue/multi-word-component-names": "off",
      "@typescript-eslint/no-unused-vars": "warn"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "_moduleAliases": {
    "@config": "src/config",
    "@models": "src/models",
    "@services": "src/services"
  },
  "types": "dist/index.d.ts"
}
