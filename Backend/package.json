    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.3",
    "sequelize": "^6.37.5",
    "vue": "^3.2.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-dev-middleware": "^7.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@eslint/js": "^9.14.0",
    "@testing-library/vue": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
