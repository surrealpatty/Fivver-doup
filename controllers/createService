const { validationResult } = require('express-validator'); // Ensure this is imported
const Service = require('../models/service'); // Ensure the Service model is imported

const createService = async (req, res) => {
    const { title, description, price } = req.body;

    // Check for validation errors
    const errors = validationResult(req);
    if (!errors.isEmpty()) {
        return res.status(400).json({ errors: errors.array() });
    }

    // Input validation for price
    if (typeof price !== 'number' || price <= 0) {
        return res.status(400).json({ message: 'Price must be a positive number.' });
    }

    try {
        // Create the service in the database
        const service = await Service.create({
            title,
            description,
            price,
            userId: req.user.id, // Attach the authenticated userâ€™s ID to the service
        });

        // Send back the created service with a success status
        res.status(201).json({ message: 'Service created successfully', service });
    } catch (error) {
        console.error('Error creating service:', error.message);
        res.status(500).json({ message: 'Error creating service', error: error.message });
    }
};

module.exports = { createService }; // Export the function for use in routes
