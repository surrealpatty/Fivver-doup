{
  "compilerOptions": {
    "target": "ES6",                // Set the output JavaScript version
    "module": "CommonJS",           // Use CommonJS module system (appropriate for Node.js)
    "outDir": "./dist",             // Directory to place the compiled JavaScript files
    "rootDir": "./src",             // Root directory for TypeScript source files
    "esModuleInterop": true,        // Ensures compatibility between CommonJS and ES6 imports
    "skipLibCheck": true,           // Skip type checking of declaration files (improves performance)
    "forceConsistentCasingInFileNames": true // Ensure file name casing consistency
  },
  "include": [
    "src/**/*.ts"                   // Include all TypeScript files in the src folder
  ],
  "exclude": [
    "node_modules"                  // Exclude the node_modules folder from compilation
  ]
}