{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "jest", "vue"],
    "incremental": true,
    "allowJs": true, // Allows JavaScript files to be compiled
  },
  "include": ["src/**/*.js", "src/**/*.vue", "config/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
