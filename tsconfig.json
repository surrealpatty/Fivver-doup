{
  "compilerOptions": {
    "target": "ESNext",                   
    "module": "CommonJS",                 
    "strict": true,                       
    "esModuleInterop": true,              
    "skipLibCheck": true,                 
    "forceConsistentCasingInFileNames": true,  
    "baseUrl": "./src",                    // Make sure baseUrl is 'src'
    "paths": {
      "@types": ["src/types"]             // Map '@types' to 'src/types' folder
    },
    "outDir": "./dist",                    
    "moduleResolution": "node",            
    "allowJs": true,                       
    "resolveJsonModule": true,             
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true         
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
