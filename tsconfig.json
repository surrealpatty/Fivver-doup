{
  "compilerOptions": {
    "target": "ESNext",                     // Set the target JavaScript version
    "module": "ESNext",                     // Use ESNext module system
    "moduleResolution": "node",             // Resolve modules as Node.js does
    "strict": true,                         // Enable strict type checking options
    "esModuleInterop": true,                // Enable ES module interop
    "skipLibCheck": true,                   // Skip library checking for faster compilation
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",                        // Base directory for relative imports
    "outDir": "./dist",                     // Output directory for compiled files
    "rootDir": "./src",                     // Root directory for source files
    "noEmitOnError": true,                  // Don't emit output if there are errors
    "resolveJsonModule": true,              // Allow importing JSON modules
    "experimentalDecorators": true,         // Enable decorators (required by some libraries like TypeORM)
    "emitDecoratorMetadata": true,          // Emit metadata for decorators (required for some libraries like sequelize-typescript)
    "skipDefaultLibCheck": true             // Skip checking default lib.d.ts (useful for performance)
  },
  "include": [
    "src/**/*.ts",                          // Include all TypeScript files in the src folder
    "tests/**/*.ts"                         // Include all TypeScript files in the tests folder
  ],
  "exclude": [
    "node_modules",                         // Exclude node_modules
    "dist",                                 // Exclude dist folder
    "**/*.js"                               // Exclude all JavaScript files
  ]
}
