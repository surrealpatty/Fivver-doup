{
  "compilerOptions": {
    "target": "es2020",                               /* Modern JavaScript version for compatibility */
    "module": "commonjs",                              /* CommonJS module system (Node.js) */
    "esModuleInterop": true,                           /* Allows default imports from CommonJS modules */
    "strict": true,                                    /* Enable strict type-checking options */
    "skipLibCheck": true,                              /* Skip checking library types for performance */
    "noEmit": false,                                   /* Emit compiled JavaScript */
    "outDir": "./dist",                                /* Output compiled files to the 'dist' directory */
    "rootDir": "./src",                                /* Root directory for source files */
    "resolveJsonModule": true,                         /* Allow importing JSON files */
    "moduleResolution": "node",                        /* Resolve modules as Node.js would */
    "lib": ["es2020"],                                 /* Modern library features */
    "declaration": true,                               /* Generate .d.ts files for TypeScript declaration files */
    "sourceMap": true,                                 /* Enable source maps for debugging */
    "baseUrl": ".",                                    /* Base directory for relative imports */
    "allowJs": true,                                   /* Allow JavaScript files to be compiled */
    "checkJs": false                                   /* Disable type checking for JavaScript files */
  },
  "include": [
    "src/**/*.ts",                                     /* Include all TypeScript files in 'src' */
    "src/routes/user.js"                               /* Include specific JavaScript file if needed */
  ],
  "exclude": [
    "node_modules",                                    /* Exclude the 'node_modules' folder */
    "dist"                                             /* Exclude the 'dist' folder (generated files) */
  ]
}
