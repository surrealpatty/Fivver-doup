{
  "compilerOptions": {
    "target": "es2020",                          
    "module": "commonjs",                         
    "esModuleInterop": true,                     
    "allowSyntheticDefaultImports": true,        
    "strict": true,                              
    "skipLibCheck": true,                         
    "noEmit": false,                             
    "outDir": "./dist",                          
    "rootDir": "./src",                          
    "resolveJsonModule": true,                   
    "moduleResolution": "node",                  
    "lib": ["es2020"],                            
    "declaration": false,                         
    "sourceMap": true,                            
    "baseUrl": ".",                              
    "paths": {
      "@/*": ["src/*"]                            
    },
    "jsx": "preserve",                           
    "types": ["node", "jest"]                    
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",  
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
