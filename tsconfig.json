{
  "compilerOptions": {
    "target": "ES6", 
    "module": "ESNext", 
    "moduleResolution": "node", 
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true, 
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"]
    },
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
