{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "typeRoots": [
      "./node_modules/@types",                // Standard type definition path
      "./src/types"                            // Custom types folder (if you have one)
    ],
    "types": ["node"],                         // Only include Node types (since you're not using Vue components)
    "jsx": "preserve",
    "skipDefaultLibCheck": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "incremental": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.d.ts",
    "jest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts"
  ]
}
