{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vue", "node", "jest"],
    "experimentalDecorators": true,  // Enable decorator support
    "emitDecoratorMetadata": true,   // Emit metadata for decorators
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],  // Adjust the path for alias @ to map to src/
      "types/*": ["src/types/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmitOnError": true,
    "resolveJsonModule": true  // Enable JSON module resolution
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/**/*.tsx",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js"
  ]
}
