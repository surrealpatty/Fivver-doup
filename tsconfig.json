{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "lib": ["ES2020", "DOM"],
      "outDir": "./dist",
      "rootDir": "./src",
      "types": ["node", "jest"],
      "incremental": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  