{
  "compilerOptions": {
    "target": "ES6",  // Target ES6 for better async/await support
    "module": "commonjs",  // Use commonjs for Node.js compatibility
    "moduleResolution": "node",  // Use Node module resolution
    "esModuleInterop": true,  // Allows default imports from CommonJS modules
    "allowSyntheticDefaultImports": true,  // Allows default imports from modules without a default export
    "skipLibCheck": true,  // Skips type checking of declaration files for faster compilation
    "forceConsistentCasingInFileNames": true,  // Ensures consistent file casing
    "strict": true,  // Enable strict type-checking
    "noImplicitAny": true,  // Avoid implicit 'any' types
    "strictNullChecks": true,  // Enforce null checks
    "outDir": "./dist",  // Output directory for compiled files
    "baseUrl": "./",  // Base URL for module resolution
    "paths": {
      "@/*": ["src/*"]  // Aliases for easy module resolution
    },
    "resolveJsonModule": true,  // Allows importing JSON files as modules
    "lib": ["esnext", "dom"],  // Add support for modern JavaScript and DOM APIs
    "typeRoots": ["./node_modules/@types", "./src/types"]  // Include custom types from src/types if needed
  },
  "include": [
    "src/**/*.ts",  // Include all TypeScript files in the src folder
    "src/**/*.d.ts"  // Include type declaration files
  ],
  "exclude": [
    "node_modules",  // Exclude node_modules from compilation
    "dist",  // Exclude dist folder from source files
    "test"  // Exclude test folder (optional)
  ]
}
