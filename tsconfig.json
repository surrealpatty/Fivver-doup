{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",  // This is critical, it tells TypeScript to resolve imports starting from 'src'
    "outDir": "./dist",
    "moduleResolution": "node",
    "paths": {
      "@types/*": ["src/types/*"]  // Ensure this maps correctly to 'src/types/*'
    }
  },
  "include": [
    "src/**/*"  // Ensure all files inside 'src' are included for type-checking
  ],
  "exclude": [
    "node_modules"  // Exclude 'node_modules' from type-checking
  ]
}
