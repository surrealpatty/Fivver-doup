{
  "compilerOptions": {
    "target": "es2020",                           // Modern ECMAScript output
    "module": "commonjs",                          // Use CommonJS module system for Node.js
    "esModuleInterop": true,                      // Enable ES Module interop
    "allowSyntheticDefaultImports": true,         // Allow synthetic default imports
    "strict": true,                               // Enable strict type checking options
    "skipLibCheck": true,                         // Skip type checking of declaration files
    "noEmit": false,                              // Allow emitting output files (important for generating JS)
    "outDir": "./dist",                           // Output directory for compiled files
    "rootDir": "./src",                           // Root directory for source files
    "resolveJsonModule": true,                    // Allow importing JSON files
    "moduleResolution": "node",                   // Module resolution strategy
    "lib": ["es2020"],                            // Use the es2020 library for modern JavaScript features
    "declaration": false,                         // Disable generating declaration files (.d.ts)
    "sourceMap": true,                            // Generate source maps for debugging
    "baseUrl": ".",                               // Base URL for non-relative imports
    "paths": {
      "@/*": ["src/*"]                            // Aliases for cleaner imports
    },
    "jsx": "preserve",                           // Preserve JSX syntax for Vue (via `vue-ts` loader)
    "types": ["node", "jest", "vue"]             // Include types for Node.js, Jest, and Vue
  },
  "include": [
    "src/**/*.ts",                               // Include all TypeScript files in the src folder
    "src/**/*.tsx",                              // Include all TypeScript JSX files in the src folder
    "src/**/*.vue",
    "src/**/*"                                   // Include all Vue files
  ],
  "exclude": [
    "node_modules",                              // Exclude node_modules folder
    "dist",                                      // Exclude dist folder (build output)
    "**/*.test.ts",                              // Exclude test files
    "**/*.test.tsx"                              // Exclude test files
  ],
  "typeAcquisition": {
    "include": ["node", "jest"]  // Ensure Node.js and Jest types are explicitly included
  }
}
