{
  "compilerOptions": {
    "module": "commonjs",                      // Use CommonJS for Node.js compatibility
    "target": "ES2017",                        // Target modern JavaScript (change to ES2020 if needed)
    "moduleResolution": "node",                // Use Node.js module resolution
    "esModuleInterop": true,                   // Enable interoperability for CommonJS modules
    "strict": true,                            // Enable all strict type-checking options
    "skipLibCheck": true,                      // Skip type checking of declaration files for performance
    "resolveJsonModule": true,                 // Allow importing JSON modules
    "baseUrl": "./src",                        // Set base directory to src for simplified imports
    "outDir": "./dist",                        // Output directory for transpiled files
    "rootDir": "./src",                        // Root directory for source files
    "types": ["jest", "node", "express"],      // Include types for Jest, Node, and Express
    "paths": {
      "@models/*": ["src/models/*"],           // Define alias for models directory
      "@controllers/*": ["src/controllers/*"], // Define alias for controllers directory
      "@services/*": ["src/services/*"],       // Define alias for services directory
      "@utils/*": ["src/utils/*"]              // Define alias for utils directory
    },
    "declaration": true,                       // Generate declaration files (.d.ts)
    "declarationMap": true,                    // Generate source maps for .d.ts files
    "allowSyntheticDefaultImports": true,      // Allow importing CommonJS modules as default imports
    "jsx": "preserve",                         // Preserve JSX (useful for Vue and React projects)
    "incremental": true,                       // Enable incremental builds for faster compilation
    "isolatedModules": true,                   // Isolated modules for faster transpilation
    "useDefineForClassFields": true,           // Enable behavior for class fields in strict mode
    "forceConsistentCasingInFileNames": true   // Ensure consistent casing in imports
  },
  "include": [
    "src/**/*.ts",                             // Include all TypeScript files
    "src/**/*.d.ts",                           // Include declaration files
    "src/**/*.tsx",                            // Include TypeScript JSX files (if used)
    "src/**/*.vue",                            // Include Vue files (if used)
    "src/test/**/*.ts"                         // Include TypeScript test files
  ],
  "exclude": [
    "node_modules",                            // Exclude node_modules directory
    "dist",                                    // Exclude the output folder (dist)
    "coverage",                                // Exclude coverage reports
    "**/*.test.js",                            // Exclude test JavaScript files
    "**/*.spec.js",                            // Exclude spec JavaScript files
    "**/*.js"                                  // Exclude non-TypeScript JavaScript files
  ]
}
