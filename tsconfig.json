{
  "compilerOptions": {
    "target": "es2020",                              /* Set to a more modern JavaScript version */
    "module": "commonjs",                             /* CommonJS for Node.js modules */
    "esModuleInterop": true,                          /* Allows default imports from CommonJS modules */
    "strict": true,                                   /* Enable strict type-checking options */
    "skipLibCheck": true,                             /* Skip checking library types for performance */
    "noEmit": false,                                  /* Allow emitting compiled JavaScript files */
    "outDir": "./dist",                               /* Output directory for compiled files */
    "rootDir": "./src",                               /* Root directory for source files */
    "resolveJsonModule": true,                        /* Allow importing JSON files */
    "moduleResolution": "node",                       /* Resolve modules like Node.js */
    "lib": ["es2020"],                                /* Use ES2020 for modern features */
    "declaration": true,                              /* Generate .d.ts files for type declarations */
    "sourceMap": true,                                /* Generate source maps for debugging */
    "baseUrl": ".",                                   /* Base directory for relative imports */
    "allowJs": true,                                  /* Allow JavaScript files to be compiled */
    "checkJs": false                                  /* Disable type checking for JavaScript files */
  },
  "include": [
    "src/**/*.ts"                                     /* Include all TypeScript files in src */
  ],
  "exclude": [
    "node_modules",                                   /* Exclude node_modules */
    "dist"                                            /* Exclude dist folder */
  ]
}
