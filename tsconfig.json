{
  "compilerOptions": {
    "target": "ES2020",  // or "ESNext"
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"], // or "ESNext", "DOM"
    "outDir": "./dist",
    "types": ["node"],
    "incremental": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
