{
  "compilerOptions": {
    "target": "ES2020",                // Target modern JavaScript features
    "module": "CommonJS",               // Use CommonJS for module resolution (standard in Node.js)
    "moduleResolution": "node",         // Resolve modules using Node.js module resolution
    "strict": true,                     // Enable all strict type-checking options
    "esModuleInterop": true,            // Allow interoperability between ESModules and CommonJS
    "skipLibCheck": true,               // Skip type checking of declaration files (speeds up compilation)
    "forceConsistentCasingInFileNames": true,  // Ensure consistent file name casing
    "resolveJsonModule": true,          // Allow importing JSON files as modules
    "outDir": "./dist",                 // Output compiled files into the dist directory
    "rootDir": "./src",                 // Root directory of your TypeScript files
    "types": ["node", "jest"],          // Include both 'node' and 'jest' types
    "typeRoots": ["./node_modules/@types", "./src/types"], // Look for type declarations in these directories
    "allowJs": true,                    // Allow JavaScript files to be included in the compilation
    "baseUrl": "./",                    // Set base directory for imports
    "paths": {
      "*": ["node_modules/*", "src/*"]  // Configure paths for resolving imports
    }
  },
  "include": [
    "src/**/*",                         // Include all files in the src directory
    "src/types/**/*.d.ts"               // Include custom type declarations if you have any
  ],
  "exclude": [
    "node_modules",                     // Exclude node_modules
    "dist"                               // Exclude the dist directory (output directory)
  ]
}
