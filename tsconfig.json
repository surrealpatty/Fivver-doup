{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],  // Removed "vue"
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": ["jest", "node", "vue", "@vue/test-utils"],  // "vue" and "@vue/test-utils" in types
    "jsx": "preserve",
    "skipDefaultLibCheck": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "incremental": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "jest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts"
  ]
}
