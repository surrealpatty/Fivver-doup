{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["types/*"],
      "@/*": ["*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",  // Include only the TypeScript files in src
    "src/types/**/*.ts",
    "src/test/**/*.ts"
  ],
  "exclude": [
    "node_modules",       // Exclude node_modules
    "dist",               // Exclude dist folder
    "index.ts",           // Exclude index.ts in root
    "jest.config.ts",     // Exclude Jest config
    "jest.setup.ts",      // Exclude Jest setup
    "fivver-frontend",    // Exclude the entire frontend directory
    "fivver-frontend/**/*.vue"  // Exclude all Vue files in frontend
  ]
}
