{
  "compilerOptions": {
    "target": "ES2018",                            // Set ECMAScript target version for Node.js
    "module": "commonjs",                          // Use commonjs module system
    "strict": true,                                // Enable strict type-checking options
    "esModuleInterop": true,                       // Allows default imports from modules without default exports
    "skipLibCheck": true,                          // Skip type checking of declaration files to improve build speed
    "forceConsistentCasingInFileNames": true,      // Ensure consistent casing for file names
    "typeRoots": ["./node_modules/@types", "./src/types"],  // Custom types path
    "types": ["node", "express", "jest"],          // Include Express and Jest types
    "lib": ["ES2018", "DOM"],                      // Add necessary libraries (DOM for browser environments)
    "outDir": "./dist",                            // Directory for transpiled files
    "baseUrl": "./",                               // Set base directory for module resolution
    "resolveJsonModule": true,                     // Allows importing JSON files
    "moduleResolution": "node",                    // Ensure proper module resolution for Node.js
    "allowJs": true,                               // Allow JavaScript files to be included in the project
    "skipDefaultLibCheck": true                    // Skip checking the default library files to speed up build
  },
  "include": [
    "src/**/*",                                    // Include all source files in the src directory
    "**/*.test.ts"                                  // Include all test files with .test.ts extension
  ],
  "exclude": [
    "node_modules",                                // Exclude node_modules folder
    "dist"                                         // Exclude dist folder
  ]
}
