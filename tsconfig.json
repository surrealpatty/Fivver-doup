{
  "compilerOptions": {
    "baseUrl": "./src",  // Base URL is set to the 'src' folder
    "paths": {
      "@types/*": ["types/*"],   // Resolves @types/* to src/types/*
      "@/*": ["*"]               // Resolves @/* to src/*
    },
    "outDir": "./dist",  // Output directory for compiled files
    "rootDir": "./src",  // Root directory for source files
    "moduleResolution": "node",  // Node-style module resolution
    "esModuleInterop": true  // Ensure compatibility with ES6 module imports
  }
}
