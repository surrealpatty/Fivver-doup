{
  "compilerOptions": {
    "target": "es2016",                              /* Set the JavaScript language version for emitted JavaScript */
    "module": "commonjs",                             /* Specify module code generation, 'commonjs' for Node.js */
    "esModuleInterop": true,                         /* Enables interoperability between CommonJS and ES Modules */
    "forceConsistentCasingInFileNames": true,         /* Enforce consistent casing in file imports */
    "strict": true,                                   /* Enable strict type-checking options */
    "skipLibCheck": true,                             /* Skip type checking of declaration files */
    "noEmit": false,                                  /* Allow emitting files (set to true if you want to skip emitting files) */
    "outDir": "./dist",                               /* Specify the output directory for compiled JavaScript files */
    "rootDir": "./src",                               /* Specify the root directory of your TypeScript source files */
    "resolveJsonModule": true,                        /* Allow importing JSON files */
    "moduleResolution": "node",                       /* Module resolution strategy, 'node' works well for Node.js */
    "allowJs": true,                                  /* Allow JavaScript files to be part of the TypeScript project */
    "skipDefaultLibCheck": true,                      /* Skip checking of default TypeScript libraries */
    "lib": ["es2020"],                                /* Use ES2020 for modern JavaScript features */
    "declaration": true,                              /* Generate type declaration files (.d.ts) */
    "sourceMap": true                                 /* Generate source maps for easier debugging */
  },
  "include": [
    "src/**/*.ts"                                     /* Include all TypeScript files in the src directory */
  ],
  "exclude": [
    "node_modules",                                   /* Exclude the node_modules directory */
    "dist"                                            /* Exclude the dist directory */
  ]
}
