{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",  // Set base URL to project root
    "paths": {
      "@models/*": ["src/models/*"],  // Correct alias for models
      "@config/*": ["src/config/*"],  // Correct alias for config
      "@types/*": ["src/types/*"],    // Correct alias for types
      "@/*": ["src/*"]  // Generic alias for 'src'
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types", 
      "./src/types"
    ],
    "lib": ["esnext"],
    "types": ["node", "jest", "sequelize", "express"],
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "src/models/**/*.ts",
    "src/types/**/*.ts",
    "src/test/**/*.ts",
    "src/test/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/test/**/*.test.ts",
    "src/test/**/*.test.tsx"
  ]
}
