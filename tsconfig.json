{
  "compilerOptions": {
    "target": "ES2020",                             
    "module": "ESNext",                             
    "moduleResolution": "node",                     
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "strict": true,                                 
    "forceConsistentCasingInFileNames": true,       
    "resolveJsonModule": true,                      
    "allowSyntheticDefaultImports": true,           
    "experimentalDecorators": true,                 
    "emitDecoratorMetadata": true,                  
    "typeRoots": ["./node_modules/@types", "./src/types"], 
    "baseUrl": "./",                                
    "paths": {
      "@/*": ["src/*"],                             
      "@dist/*": ["dist/*"],                        
      "@types/*": ["src/types/*"],                  
      "@models/*": ["src/models/*"],                
      "@controllers/*": ["src/controllers/*"],      
      "@routes/*": ["src/routes/*"],                
      "@config/*": ["src/config/*"],                // Corrected path for config alias
      "@middlewares/*": ["src/middlewares/*"],      
      "@shared/*": ["src/shared/*"]                 
    },
    "noEmit": true,                                 
    "rootDir": "./src",                             
    "lib": ["ES2020", "DOM"],                       
    "sourceMap": true,                              
    "allowJs": true,                                
    "checkJs": true                                 
  },
  "include": [
    "src/**/*",                                     
    "src/types/**/*.d.ts"                           
  ],
  "exclude": [
    "node_modules",                                 
    "dist",                                         
    "fivver-frontend",                              
    "*.config.ts",                                  
    "*.setup.ts",                                   
    "jest.config.ts"                                
  ]
}
