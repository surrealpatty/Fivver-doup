{
  "compilerOptions": {
    "target": "es2020",                             
    "module": "commonjs",                            
    "esModuleInterop": true,                         
    "strict": true,                                  
    "skipLibCheck": true,                           
    "noEmit": false,                                 
    "outDir": "./dist",                              
    "rootDir": "./src",                              
    "resolveJsonModule": true,                       
    "moduleResolution": "node",                      
    "lib": ["es2020"],                               
    "declaration": false,                            
    "inlineSourceMap": true,  // Keep this option
    "baseUrl": ".",                                    
    "allowJs": false,                                 
    "checkJs": false,  
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",                                  
    "dist",  
    "**/*.vue"  
  ]
}
