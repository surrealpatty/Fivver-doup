{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",  // Set base URL to src folder
    "paths": {
      "@models/*": ["models/*"],  // Update paths to remove src prefix
      "@config/*": ["config/*"],
      "@types/*": ["types/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types", 
      "./src/types"
    ],
    "lib": ["esnext"],
    "types": ["node", "jest", "sequelize", "express"],
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "src/models/**/*.ts",
    "src/types/**/*.ts",
    "src/test/**/*.ts",
    "src/test/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/test/**/*.test.ts",
    "src/test/**/*.test.tsx"
  ]
}
