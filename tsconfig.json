{
  "compilerOptions": {
    "baseUrl": "./src", // Base URL should be set to 'src' (or the root of your source code)
    "paths": {
      "@models/*": ["models/*"],
      "@config/*": ["config/*"],
      "@types/*": ["types/*"],
      "@/*": ["*"]
    },
    "outDir": "./dist",  // Output directory for compiled files
    "rootDir": "./src",  // Root directory for source files
    // other settings...
  },
  "include": [
    "src/**/*.ts",  // Include all TypeScript files in the src folder
    "src/types/**/*.ts",  // Include type definition files
    "src/test/**/*.ts"  // Include test files
  ],
  "exclude": [
    "node_modules",
    "dist"  // Exclude dist folder
  ]
}
