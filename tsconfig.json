{
  "compilerOptions": {
    "target": "ES2020",                           // Use ES2020 for modern features
    "module": "commonjs",                         // Use CommonJS for module system
    "moduleResolution": "node",                   // Resolve modules in Node.js style
    "strict": true,                               // Enable strict type checking
    "esModuleInterop": true,                      // Allow interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                         // Skip type checking of declaration files for performance
    "forceConsistentCasingInFileNames": true,     // Enforce consistent casing in file names
    "outDir": "./dist",                           // Output compiled files to the dist directory
    "rootDir": "./src",                           // Use the src directory as the root for source files
    "baseUrl": "./src",                           // Set base URL to the src directory for easier imports
    "resolveJsonModule": true,                    // Allow importing JSON files as modules
    "allowJs": true,                              // Allow JavaScript files in the project
    "checkJs": false,                             // Do not check JavaScript files for type errors
    "sourceMap": true,                            // Enable source maps for debugging
    "types": ["node", "jest"],                    // Include types for Node.js and Jest
    "noImplicitAny": true,                        // Disallow usage of 'any' type
    "strictNullChecks": true,                     // Enable strict null checks
    "noUnusedLocals": true,                       // Disallow unused local variables
    "noUnusedParameters": true,                   // Disallow unused function parameters
    "noImplicitReturns": true,                    // Ensure functions have explicit return types
    "noFallthroughCasesInSwitch": true,           // Prevent fall-through in switch cases
    "paths": {
      "@config/*": ["src/config/*"],              // Correct path alias for the config folder
      "@models/*": ["src/models/*"],              // Path alias for models folder
      "@controllers/*": ["src/controllers/*"],    // Path alias for controllers folder
      "@services/*": ["src/services/*"],          // Path alias for services folder
      "@utils/*": ["src/utils/*"],                // Path alias for utils folder
      "@routes/*": ["src/routes/*"]               // Path alias for routes folder
    }
  },
  "include": ["src/**/*"],                        // Include all files in the src folder
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"] // Exclude test files and build folder
}
