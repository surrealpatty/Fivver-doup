{
  "compilerOptions": {
    "target": "ESNext",                             
    "module": "CommonJS",                           
    "moduleResolution": "node",                    
    "strict": true,                                
    "noImplicitAny": true,                         
    "esModuleInterop": true,                       
    "skipLibCheck": true,                         
    "forceConsistentCasingInFileNames": true,       
    "baseUrl": "./",                               
    "outDir": "./dist",                           
    "rootDir": "./src",                           
    "noEmitOnError": true,                        
    "resolveJsonModule": true,                    
    "experimentalDecorators": true,               
    "emitDecoratorMetadata": true,               
    "allowJs": false,                             
    "declaration": true,                         
    "declarationMap": false,                     
    "types": [                                   
      "node",
      "jsonwebtoken",
      "jest",
      "nodemailer",
      "supertest"
    ],
    "typeRoots": [                               
      "node_modules/@types",                     
      "./src/types"                              
    ],
    "paths": {                                   
      "@src/*": ["src/*"],
      "@dist/*": ["dist/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": [
    "src/**/*.ts",                               
    "src/test/**/*.ts",                         
    "src/types/**/*.d.ts"                       
  ],
  "exclude": [
    "node_modules",                              
    "dist",                                     
    "**/*.js"                                   
  ]
}
