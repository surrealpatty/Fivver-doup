{
  "compilerOptions": {
    "module": "CommonJS",                     // CommonJS for Node.js compatibility
    "target": "ESNext",                       // Target modern JavaScript
    "moduleResolution": "node",               // Use Node.js resolution for modules
    "esModuleInterop": true,                  // Enable interoperability for CommonJS modules
    "strict": true,                           // Enable all strict type-checking options
    "skipLibCheck": true,                     // Skip type checking of declaration files
    "resolveJsonModule": true,                // Allow importing JSON modules
    "baseUrl": "./src",                       // Set base directory to src for simplified imports
    "outDir": "dist",                         // Output directory for transpiled files
    "rootDir": "src",                         // Root directory for source files
    "types": ["jest", "node", "vue", "express"], // Ensure express types are included
    "paths": {
      "@/*": ["src/*"]                        // Use @/ for imports from src/
    },
    "declaration": true,                      // Generate declaration files
    "declarationMap": true,                   // Generate maps for .d.ts files
    "allowSyntheticDefaultImports": true,     // Allow importing CommonJS modules as default imports
    "jsx": "preserve",                        // Preserve JSX (works with Vue)
    "incremental": true,                      // Enable incremental builds
    "isolatedModules": true,                  // Isolated modules for faster transpilation
    "useDefineForClassFields": true,          // Define behavior for class fields
    "forceConsistentCasingInFileNames": true  // Ensure consistent casing in imports
  },
  "include": [
    "src/**/*.ts",                            // Include TypeScript files
    "src/**/*.d.ts",                          // Include declaration files
    "src/**/*.tsx",                           // Include TypeScript JSX files
    "src/**/*.vue",                           // Include Vue files
    "src/test/**/*.ts",                       // Include test files
    "src/controllers/categoryController.js"   // Include specific JavaScript file
  ],
  "exclude": [
    "node_modules",                           // Exclude node_modules
    "dist",                                   // Exclude the output folder
    "coverage",                               // Exclude coverage reports (if any)
    "**/*.test.js",                           // Exclude test JavaScript files
    "**/*.spec.js"                            // Exclude spec JavaScript files
  ]
}
