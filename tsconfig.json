{
  "compilerOptions": {
    "target": "ES6",                              
    "module": "CommonJS",                         
    "strict": true,                               
    "esModuleInterop": true,                      
    "skipLibCheck": true,                         
    "moduleResolution": "node",                   
    "outDir": "./dist",                           
    "rootDir": "./src",                           
    "baseUrl": "./",                              
    "resolveJsonModule": true,                    
    "paths": {                                    
      "*": ["node_modules/*", "src/*"]            
    },
    "allowJs": true,                              
    "checkJs": false,                             
    "sourceMap": true,                            
    "forceConsistentCasingInFileNames": true,     
    "types": ["node"],                            
    "noImplicitAny": true,                        
    "strictNullChecks": true                      
  },
  "include": [
    "src/**/*"                                    
  ],
  "exclude": [
    "node_modules",                               
    "dist"                                        
  ]
}
