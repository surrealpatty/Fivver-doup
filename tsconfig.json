{
  "compilerOptions": {
    "target": "ES6",  // Set target to ES6, which is a good balance for Node.js compatibility
    "module": "commonjs",  // Changed to "commonjs" for better Node.js compatibility
    "moduleResolution": "node",  // Ensures modules are resolved in a Node.js-compatible way
    "esModuleInterop": true,  // Allows default imports from modules with no default export
    "allowSyntheticDefaultImports": true,  // Allows default imports from modules without a default export
    "skipLibCheck": true,  // Skip library checking for faster compilation
    "forceConsistentCasingInFileNames": true,  // Enforces consistent file name casing
    "strict": true,  // Enables all strict type-checking options
    "noImplicitAny": true,  // Disallows "any" type by default
    "strictNullChecks": true,  // Enables strict null checks
    "outDir": "./dist",  // Ensures compiled files go to the "dist" folder
    "baseUrl": "./",  // Enables path mapping
    "paths": {
      "@/*": ["src/*"]  // Maps "@/..." to "src/..."
    },
    "resolveJsonModule": true,  // Allows importing JSON files as modules
    "lib": ["esnext", "dom"],  // Includes ES and DOM libraries
    "typeRoots": [
      "./node_modules/@types",  // Standard types folder
      "./src/types"  // Custom types folder, if you have one
    ],
    "types": ["jest"],  // Include Jest types only if using Jest for tests
    "jsx": "preserve",  // Keeps JSX intact if working with React
    "skipDefaultLibCheck": true,  // Skip checking of the default lib
    "tsBuildInfoFile": "./.tsbuildinfo",  // Enable incremental builds for faster rebuilds
    "incremental": true  // Enable incremental compilation
  },
  "include": [
    "src/**/*.ts",  // Include all TypeScript files in the "src" folder
    "src/**/*.tsx",  // Include all TypeScript JSX files
    "src/**/*.js",  // Include JavaScript files if necessary
    "src/**/*.d.ts",  // Include TypeScript declaration files
    "jest.setup.ts"  // Include Jest setup file if you have one
  ],
  "exclude": [
    "node_modules",  // Exclude the "node_modules" folder
    "dist",  // Exclude the compiled "dist" folder
    "jest.config.ts"  // Exclude Jest config if using TypeScript for config
  ]
}
