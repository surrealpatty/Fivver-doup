{
  "compilerOptions": {
    "target": "ESNext",                               // Use the latest ECMAScript version
    "module": "ESNext",                               // Use ESNext module system (ES module support)
    "moduleResolution": "node",                       // Use Node's module resolution strategy
    "strict": true,                                   // Enable strict type checking
    "esModuleInterop": true,                          // Allow CommonJS modules to be imported as ES Modules
    "skipLibCheck": true,                             // Skip library checks (useful for large projects)
    "skipDefaultLibCheck": true,                      // Skip default library checks for faster compilation
    "forceConsistentCasingInFileNames": true,         // Ensure consistent file name casing
    "outDir": "./dist",                               // Output directory for compiled files
    "rootDir": "./src",                               // Root directory for source files
    "baseUrl": ".",                                   // Base URL for module resolution
    "resolveJsonModule": true,                        // Allow importing JSON files
    "paths": {
      "*": ["node_modules/*", "src/types/*"]          // Resolve custom types from src/types (ensure you have custom types here if needed)
    },
    "declaration": true,                              // Generate .d.ts declaration files
    "sourceMap": true,                                // Generate source maps for debugging
    "allowSyntheticDefaultImports": true,             // Allow default imports for CommonJS modules
    "noImplicitAny": true,                            // Disallow 'any' type implicitly
    "strictNullChecks": true,                         // Enable strict null checks
    "experimentalDecorators": true,                   // Enable experimental decorators (if used in your project)
    "emitDecoratorMetadata": true,                    // Emit decorator metadata for TypeScript decorators
    "noUnusedLocals": true,                           // Disallow unused local variables
    "noUnusedParameters": true,                       // Disallow unused function parameters
    "strictPropertyInitialization": true,             // Ensure properties are initialized in class constructors
    "types": ["node", "express"]                      // Ensure both node and express types are included
  },
  "include": [
    "src/**/*"                                        // Include all files under the src directory
  ],
  "exclude": [
    "node_modules",                                   // Exclude node_modules directory
    "dist",                                           // Exclude the dist directory
    "**/*.spec.ts"                                    // Exclude spec files, but include *.test.ts for testing
  ]
}
