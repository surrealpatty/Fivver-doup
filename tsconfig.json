{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"],
      "@types/*": ["types/*"],   // Correctly maps @types to the types folder
      "@config/*": ["config/*"],
      "@/*": ["*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"  // Ensure TypeScript looks in src/types for custom type definitions
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "fivver-frontend",
    "jest.config.ts",
    "jest.setup.ts"
  ]
}
