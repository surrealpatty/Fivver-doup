{
  "compilerOptions": {
    "target": "es6",                // Output ES6 JavaScript
    "module": "commonjs",           // Use commonjs for modules (Node.js standard)
    "strict": true,                 // Enable all strict type-checking options
    "esModuleInterop": true,        // Enable interoperability with commonjs modules
    "skipLibCheck": true,           // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "outDir": "./dist",             // Where to place compiled JavaScript files
    "rootDir": "./src",             // Where to find your TypeScript files
    "moduleResolution": "node",     // Resolve modules like Node.js
    "allowJs": false,               // Prevent JS files from being compiled
    "noEmit": false,                // Allow the compiler to output files
    "removeComments": true          // Remove comments from compiled JavaScript
  },
  "include": [
    "src/**/*.ts"                   // Include all TypeScript files in src directory
  ],
  "exclude": [
    "node_modules",                 // Exclude node_modules folder
    "dist",                          // Exclude the dist folder (compiled files)
    "src/**/*.js"                    // Ensure no .js files are included in the compilation
  ]
}
