{
  "compilerOptions": {
    "target": "ES2020",  // Keeping the target as ES2020, which is fine
    "module": "commonjs",
    "moduleResolution": "node",  // Use Node's module resolution strategy
    "strict": true,  // Enable all strict type-checking options
    "esModuleInterop": true,  // Enable interoperability between CommonJS and ES Modules
    "skipLibCheck": true,  // Skip type-checking of declaration files
    "forceConsistentCasingInFileNames": true,  // Ensure consistent casing
    "outDir": "./dist",  // Output directory for compiled files
    "rootDir": "./src",  // Root directory for source files
    "baseUrl": "./src",  // Base directory for module resolution
    "resolveJsonModule": true,  // Allow importing JSON files as modules
    "allowJs": true,  // Allow JavaScript files (if needed)
    "checkJs": false,  // Skip type checking for JS files
    "sourceMap": true,  // Generate source maps for debugging
    "types": ["node", "jest"],  // Include types for Node and Jest
    "noImplicitAny": true,  // Disallow implicit 'any' types
    "strictNullChecks": true,  // Enforce null checks
    "noUnusedLocals": true,  // Disallow unused local variables
    "noUnusedParameters": true,  // Disallow unused function parameters
    "noImplicitReturns": true,  // Enforce returning values in functions
    "noFallthroughCasesInSwitch": true,  // Disallow fallthrough in switch statements
    "paths": {
      "@config/*": ["config/*"],
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],  // Include all TypeScript files in the src folder
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]  // Exclude test files and the dist folder
}
