{
  "compilerOptions": {
    "target": "ESNext",                 
    "module": "ESNext",                 
    "moduleResolution": "Node",         
    "lib": ["DOM", "ESNext"],           
    "strict": true,                     
    "esModuleInterop": true,            
    "skipLibCheck": true,               
    "forceConsistentCasingInFileNames": true,
    "types": ["vue", "node", "jest"],   
    "baseUrl": ".",                     
    "paths": {
      "@/*": ["src/*"],                
      "types/*": ["src/types/*"]        // Add this path mapping
    },
    "outDir": "./dist",                 
    "rootDir": "./src",                 
    "noEmitOnError": true              
  },
  "include": [
    "src/**/*.ts",                     
    "src/**/*.d.ts",                   
    "src/**/*.vue",                    
    "src/**/*.tsx",                    
    "tests/**/*.ts"                    
  ],
  "exclude": [
    "node_modules",                    
    "dist",                            
    "**/*.js"                          
  ]
}
