{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./src",    // Ensure this is inside the `src` folder
    "paths": {
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@config/*": ["config/*"],
      "@middlewares/*": ["middlewares/*"]
    },
    "outDir": "./dist",     // Outputs compiled files in the `dist` folder
    "rootDir": "./src",     // Set root directory for source files
    "lib": ["ES2020"],
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
