{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "types": ["jest", "node", "vue"],  // Added jest and node for Jest and Node.js type support
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",  // TypeScript files in the src folder
    "src/**/*.d.ts",  // TypeScript declaration files
    "src/**/*.tsx",  // TypeScript React files (if using JSX/TSX)
    "src/**/*.vue",  // Vue component files
    "src/test/**/*.ts"  // Include your test files (add a wildcard for .ts test files)
  ],
  "exclude": [
    "node_modules",  // Exclude node_modules folder
    "dist"  // Exclude dist folder
  ]
}