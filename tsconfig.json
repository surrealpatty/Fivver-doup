{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",  // Base URL for module resolution
    "paths": {
      "@models/*": ["src/models/*"],  // Correct alias for models
      "@config/*": ["src/config/*"]  // Correct alias for config (removed @services if unused)
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "lib": ["esnext"],
    "types": ["node", "jest", "sequelize", "express"],
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts",
    "src/models/**/*.ts",
    "src/types/**/*.ts",
    "src/test/**/*.ts",
    "src/test/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/test/**/*.test.ts",
    "src/test/**/*.test.tsx"
  ]
}
