{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "decoratorMetadata": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    }
  },
  "module": {
    "type": "commonjs"
  },
  "sourceMaps": false,  // Disable source map generation
  "env": {
    "targets": "node 16"  // Target Node.js 16
  },
  "exclude": ["node_modules"]
}
